<h1 style="font-size: 32px; font-weight: bold; margin-bottom: 20px;"><%= @student.name %></h1>
<p style="font-size: 18px; margin-bottom: 10px;">Grade: <%= @student.grade %></p>
<div style="margin-bottom: 20px;">
  <%= link_to 'Edit', edit_student_path(@student), style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none; margin-right: 10px;" %> 
  <%= link_to 'Back', students_path, style: "background-color: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none;" %>
</div>
<h2 style="font-size: 24px; font-weight: bold; margin-bottom: 15px;">Attendance</h2>
<div style="margin-bottom: 20px;">
  <%= link_to 'New Attendance', new_student_attendance_path(@student), style: "background-color: #28a745; color: white; padding: 10px 20px; border: none; border-radius: 5px; text-decoration: none;" %>
</div>
<ul style="list-style-type: none; padding-left: 0;">
  <% @student.attendances.each do |attendance| %>
    <li style="font-size: 16px; margin-bottom: 10px;">
      <%= attendance.date %> - <%= attendance.status %>
      (<%= link_to 'Edit', edit_student_attendance_path(@student, attendance), style: "color: #007bff; text-decoration: none;" %>)
    </li>
  <% end %>
</ul>

