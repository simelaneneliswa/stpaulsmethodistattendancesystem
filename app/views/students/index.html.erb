<div class="max-w-3xl mx-auto px-6 py-8 bg-white shadow-md rounded-lg">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-6">All Students</h1>

  <ol class="divide-y divide-gray-200">
    <% @students.each do |student| %>
      <li class="flex items-center justify-between py-4">
        <span class="text-xl font-medium text-gray-800"><%= link_to student.name, student_path(student), class: "text-blue-600 hover:underline" %></span>
        <div class="flex space-x-4">
          <%= link_to 'Edit', edit_student_path(student), class: "text-sm text-blue-500 hover:text-blue-700 bg-blue-100 px-3 py-1 rounded" %>
          <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-sm text-red-500 hover:text-red-700 bg-red-100 px-3 py-1 rounded" %>
        </div>
      </li>
    <% end %>
  </ol>

  <%= link_to 'New Student', new_student_path, class: "block mt-6 bg-blue-500 text-white text-center text-lg font-semibold px-6 py-3 rounded hover:bg-blue-700" %>
</div>
