<h2 style="font-size: 24px; font-weight: bold; margin-bottom: 20px;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :email, style: "font-weight: bold; display: block; margin-bottom: 5px;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "padding: 5px; width: 100%; box-sizing: border-box;" %>
  </div>

  <div class="actions" style="margin-bottom: 20px;">
    <%= f.submit "Send me reset password instructions", style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>

<div style="margin-top: 20px;">
  <%= render "devise/shared/links" %>
</div>

