<h2 style="font-size: 24px; font-weight: bold; margin-bottom: 20px;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :email, style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>

  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :password, style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field" style="margin-bottom: 15px;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style: "font-weight: normal;" %>
    </div>
  <% end %>

  <div class="actions" style="margin-top: 20px;">
    <%= f.submit "Log in", style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>

<%= render "devise/shared/links", style: "margin-top: 20px; display: block;" %>

